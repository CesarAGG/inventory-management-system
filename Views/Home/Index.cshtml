@model IEnumerable<InventoryManagementSystem.Models.Inventory>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Inventory Management System</h1>
</div>

<div class="mt-5">
    <h3>Recently Created Inventories</h3>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Inventory Name</th>
                <th>Owner</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inventory in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Manage" asp-controller="Inventory" asp-route-id="@inventory.Id">@inventory.Name</a>
                    </td>
                    <td>@(inventory.Owner?.Email ?? "N/A")</td>
                    <td>@inventory.CreatedAt.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
</div>